@page
@model PaymentDemo.Pages.Payments.MockCheckoutModel

@{
    ViewData["Title"] = "Mock Checkout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Mock Checkout</h4>
                </div>

                <div class="card-body">

                    <div class="mb-3">
                        <p class="mb-1"><strong>Provider:</strong></p>
                        <div class="form-control bg-light">@Model.Provider</div>
                    </div>

                    <div class="mb-3">
                        <p class="mb-1"><strong>Order:</strong></p>
                        <div class="form-control bg-light">@Model.OrderId</div>
                    </div>

                    <div class="mb-4">
                        <p class="mb-1"><strong>Reference:</strong></p>
                        <div class="form-control bg-light">@Model.Ref</div>
                    </div>

                    <div class="row g-2">
                        <div class="col-6 d-grid">
                            <form method="post" asp-page-handler="Paid">
                                <button type="submit" class="btn btn-success btn-lg">
                                    ✅ Simulate Paid
                                </button>
                            </form>
                        </div>

                        <div class="col-6 d-grid">
                            <form method="post" asp-page-handler="Failed">
                                <button type="submit" class="btn btn-danger btn-lg">
                                    ❌ Simulate Failed
                                </button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>

            <div class="alert alert-info mt-4 text-center">
                This is a simulated payment gateway page for testing purposes.
            </div>

        </div>
    </div>
</div>
